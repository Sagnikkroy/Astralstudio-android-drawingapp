<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context=".newproject">






    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="433dp"
        android:layout_height="75dp"
        android:background="#E7E9EA"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="193dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="New Illustration"
        android:textColor="#8F9595"
        android:textStyle="normal"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.709" />


    <TextView
        android:id="@+id/animtxt"
        android:layout_width="193dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="New Animation"
        android:textColor="#8F9595"
        android:textStyle="normal"
        android:textSize="20dp"
        android:visibility="gone"

        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.709" />

    <TextView
        android:id="@+id/webcomtxt"
        android:layout_width="193dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="New Webcomic Strip"
        android:textColor="#8F9595"
        android:textStyle="normal"
        android:textSize="20dp"
        android:visibility="gone"

        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.709" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="37dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toEndOf="@+id/imageButton4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.416"
        app:srcCompat="@drawable/untitled437_20230312110151" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="421dp"
        android:layout_height="68dp"
        android:layout_marginBottom="26dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="64dp"
            android:layout_height="64dp"

            android:layout_marginRight="64dp"
            android:background="@drawable/alignment_selector"
            android:button="@android:color/transparent"
            android:checked="true"
            android:gravity="center_vertical|center_horizontal"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginRight="64dp"
            android:background="@drawable/selector2"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/selector3"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:padding="8dp" />
    </RadioGroup>

    <Button
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#333439"
        android:stateListAnimator="@null"
        android:text="Create Canvas"
        android:textSize="14dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="238dp"
        android:layout_height="249dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.323"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/dashed"

    />

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="-5dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.626">

        <View
            android:id="@+id/rectangle_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/canvas_preview"

            android:foregroundGravity="center"
            android:minWidth="50dp"
            android:minHeight="50dp" />

    </RelativeLayout>

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="245dp"
        android:layout_height="25dp"
        android:layout_marginStart="-90dp"
        android:layout_marginTop="144dp"
        android:progress="100"
        android:thumbTint="#4A4A4A"

        android:progressTint="#4A4A4A"
        android:max="9998"
        android:min="1"
        android:rotation="-90"
        app:layout_constraintStart_toEndOf="@+id/editText1"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="340dp"
        android:layout_height="25dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="5dp"
        android:max="9998"
        android:min="1"
        android:thumbTint="#4A4A4A"

        android:progressTint="#4A4A4A"
        android:progress="100"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="89dp"
        android:layout_height="36dp"
        android:layout_marginTop="232dp"
        android:background="@drawable/textboxbackground"
        android:textColorHint="#989898"
        android:hint="100"
        android:importantForAutofill="no"

        android:inputType="number"
        android:textColor="#737171"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.816"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="89dp"

        android:layout_height="36dp"
        android:layout_marginTop="36dp"
        android:importantForAutofill="no"
        android:background="@drawable/textboxbackground"
        android:hint="100"
        android:textColorHint="#C6C6C6"
        android:inputType="number"
        android:textColor="#737171"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />


    <TextView
        android:id="@+id/WidthTextView"
        android:layout_width="78dp"
        android:layout_height="31dp"
        android:layout_marginTop="48dp"
        android:gravity="center_vertical|left"
        android:text="1000"
        android:textColor="#707070"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/Xtext"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/HeightTextView"
        android:layout_width="78dp"
        android:layout_height="31dp"
        android:layout_marginBottom="190dp"

        android:gravity="center_vertical|right"
        android:text="1000"
        android:textColor="#707070"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toStartOf="@+id/Xtext"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/Xtext"
        android:layout_width="24dp"
        android:layout_height="23dp"
        android:layout_marginStart="160dp"
        android:gravity="center"
        android:text="X"
        android:textColor="#707070"
        app:layout_constraintBottom_toTopOf="@+id/editText1"
        app:layout_constraintStart_toEndOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.253" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="184dp"
        android:layout_height="44dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/spinner_border"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toEndOf="@+id/editText3"
        app:layout_constraintTop_toBottomOf="@+id/editText1">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="156dp"
            android:layout_height="32dp"

            android:layout_marginStart="0dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="36dp"
            android:backgroundTint="#6A6A6A"

            android:foregroundTint="#6A6A6A"
            android:textColor="#9F0202" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="45dp"
        android:layout_height="38dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="DPI -"
        android:textColor="#707070"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toStartOf="@+id/editText3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.11" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="60dp"
        android:layout_height="37dp"
        android:layout_marginStart="80dp"
        android:background="@drawable/textboxbackground"

        android:gravity="center"
        android:layout_marginTop="-16dp"
        android:hint="300"
        android:importantForAutofill="no"
        android:inputType="number"
        android:textColor="#737171"
        android:textColorHint="#989898"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.28" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="329dp"
        android:layout_height="45dp"
        android:background="@drawable/textboxbg2"

        android:gravity="center_vertical"
        android:hint="Name of your project"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingStart="16dp"
        android:textColor="#737171"
        android:textColorHint="#B6B6B6"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.784" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="5dp"
        android:text="Project name *"
        android:textColor="#A6A6A6"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editText4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.917" />


</androidx.constraintlayout.widget.ConstraintLayout>