<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Layer 1: Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#5A5A5A" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
            <corners android:radius="40dp"/>
        </shape>
    </item>



</layer-list>
