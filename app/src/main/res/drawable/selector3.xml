<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- unchecked state with shape and drawable -->
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#F6F6F6"/>
                    <corners android:radius="0dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/webcomic" android:gravity="center" />
        </layer-list>
    </item>

    <!-- checked state with shape and drawable -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#DFDFDF"/>
                    <corners android:radius="10dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/webcomicselected" android:gravity="center" />
        </layer-list>
    </item>

</selector>
