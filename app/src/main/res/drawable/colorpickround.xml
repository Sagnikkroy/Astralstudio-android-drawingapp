<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Unselected state -->
    <item android:state_selected="false">
        <layer-list>
            <!-- Oval shape with blue fill -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#000000" /> <!-- Blue fill color -->
                </shape>
            </item>

            <!-- Oval shape with white outline -->
            <item>
                <shape android:shape="oval">
                    <stroke
                        android:width="10dp"
                        android:color="#DCFFFFFF" /> <!-- White outline color -->
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Selected state -->
    <item android:state_selected="true">
        <layer-list>

            <!-- Oval shape with blue stroke (increased width) -->
            <item>
                <shape android:shape="oval">
                    <stroke
                        android:width="20dp"
                        android:color="#1F69E8" /> <!-- Blue stroke color -->
                </shape>
            </item>
        </layer-list>
    </item>

</selector>

